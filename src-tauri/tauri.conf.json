{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WorldWeaver",
  "version": "0.2.0",
  "identifier": "com.fablestar.worldweaver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "ui-panel",
        "title": "WorldWeaver",
        "width": 300,
        "height": 900,
        "x": 0,
        "y": 0,
        "resizable": true,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
